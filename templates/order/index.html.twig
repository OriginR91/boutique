{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block content %}
<h2>Valider ma commande</h2>
<p>Choisissez vos préférences avant de passer votre commande sur la boutique.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        {% set formHtml %}
            {{ form(form) }}
        {% endset %}

        {{ formHtml|replace({'[br]' : '<br />'})|raw }}
    </div>
    <div class="col-md-6">
        <div class="text-center">
            <p>Récap de ma commande :</p>
        </div>

        <div class="order-summary">
            {% for key, c in cart %}
            <div class="row {% if key > 2 %}mt-2{% endif %}">
                <div class="col-3">
                    <img src="/uploads/files/{{ c.product.illustration }}" alt="{{ c.product.name }}" height="70px">
                </div>
                <div class="col-6">
                    {{ c.product.name }} <br />
                    {{ c.product.subtitle }}
                </div>
                <div class="col-3">
                    {{ c.quantity }}
                </div>
            </div>
            {% endfor %}
        </div>

    </div>
</div>
{% endblock %}
